      <artifactId>org.wso2.carbon.apimgt.impl</artifactId>
      <version>9.32.147</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>XmlSchema</artifactId>
          <groupId>org.apache.ws.commons.schema</groupId>
        </exclusion>
